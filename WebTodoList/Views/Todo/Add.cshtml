@model AddTodoViewModel

<!DOCTYPE html>
<html>
    <head>
        <title>
            New Todo item
        </title>
    </head>

    <body>
        <div class="page-header">
            <h1> 
                New Todo item
            </h1>
            <h5>
                    <a asp-action="Index">
                        <span class="glyphicon glyphicon-backward" aria-hidden="true"></span>
                        Back to active todos
                    </a>
                </h5>
        </div>
        
        <div class="container">
            <form asp-action="Add" method="post" class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-3">
                        <input asp-for="Text" class="form-control" />
                    </div>
                    <div class="col-md-9">
                        <span class="alert alert-danger" role="alert" asp-validation-for="Text"></span><br />
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" />
                </div>
            </form>
        </div>

    </body>
</html>