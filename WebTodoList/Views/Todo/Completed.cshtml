@model List<TodoRepository.TodoItem>

<!DOCTYPE html>
<html>
    <head>
        <title>
            Completed Todo items
        </title>
    </head>

    <body>
        <div>
            <div id="header">
                <h1> 
                    Completed Todo items
                </h1>

                <h5>
                    <a asp-action="Index">
                        <span class="glyphicon glyphicon-backward" aria-hidden="true"></span>
                        Back to active todos
                    </a>
                </h5>
            </div>


            @foreach (var todo in Model)
            {
                <hr />
                <h4>
                    @todo.Text
                </h4>
                <p>
                    Created:
                    @todo.DateCreated
                    <br />
                    Completed:
                    @todo.DateCompleted
                </p>
            }
        </div>
    </body>
</html>